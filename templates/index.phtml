{% block scripts %}
  {{ super() }}
  <script src="{{cdn}}/js/index.js" ></script>
  {% if user %}
    <script src="{{cdn}}/js/rateit/jquery.rateit.min.js" ></script>
    <link href="{{cdn}}/js/rateit/rateit.css" media="all" rel="stylesheet" type="text/css" />
  {% endif %}
